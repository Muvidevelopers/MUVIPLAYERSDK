<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cast_and_crew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/castImageView"
                    android:layout_width="@dimen/cast_details_width"
                    android:layout_height="@dimen/cast_details_height" />


                <TextView
                    android:id="@+id/castNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ppv_margin"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/videotextColor"
                    android:textSize="@dimen/cast_textsize" />

                <TextView
                    android:id="@+id/castDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ppv_margin"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textColor="@color/videotextColor"
                    android:textSize="@dimen/cast_description_text" />
            </LinearLayout>

            <Button
                android:id="@+id/btnMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/ppv_margin"
                android:background="@drawable/view_more_button_background"
                android:minHeight="@dimen/btnMore_min_height"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                android:textColor="@color/buttonTextColor"
                android:textSize="@dimen/cast_btn_textsize" />

            <View
                android:id="@+id/borderLineView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_line_height"
                android:layout_marginTop="@dimen/ppv_margin"
                android:background="@color/border_color"
                android:paddingLeft="@dimen/Login_drawing_padding"
                android:paddingRight="@dimen/Login_drawing_padding"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filmographyRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/compress_expand_margin"
                android:layout_marginTop="@dimen/ppv_margin"
                android:clipToPadding="false"
                android:padding="@dimen/Login_drawing_padding"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


